<com.google.android.gms.ads.nativead.NativeAdView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/simple_native_ad"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_centerInParent="false"
    android:background="@android:color/transparent">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerInParent="false">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/background"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:layout_width="@dimen/ad_banner_no_size"
            android:layout_height="@dimen/ad_banner_no_size"
            android:layout_marginStart="@dimen/ad_banner_default_margin"
            android:layout_marginTop="@dimen/ad_banner_no_margin"
            android:layout_marginEnd="16dp"
            android:layout_marginBottom="@dimen/ad_banner_no_margin"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/icon"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintDimensionRatio="H,1:1"
                app:layout_constraintEnd_toStartOf="@+id/content"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                android:background="@drawable/ad_banner_icon_background"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/ad_banner_no_margin"
                android:layout_marginTop="@dimen/ad_banner_default_margin"
                android:layout_marginEnd="@dimen/ad_banner_no_margin"
                android:layout_marginBottom="@dimen/ad_banner_default_margin"
                android:layout_weight="0"
                />

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/content"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toStartOf="@id/cta"
                app:layout_constraintStart_toEndOf="@id/icon"
                app:layout_constraintTop_toTopOf="parent"
                android:layout_width="@dimen/ad_banner_no_size"
                android:layout_height="match_parent"
                android:layout_marginStart="@dimen/ad_banner_default_margin"
                android:layout_marginTop="@dimen/ad_banner_no_margin"
                android:layout_marginEnd="@dimen/ad_banner_no_margin"
                android:layout_marginBottom="@dimen/ad_banner_no_margin"
                android:orientation="vertical">

                <LinearLayout
                    android:id="@+id/headline"
                    app:layout_constraintBottom_toTopOf="@+id/row_two"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/ad_banner_text_row_weight"
                    android:background="@android:color/transparent"
                    android:orientation="horizontal">

                    <TextView
                        android:id="@+id/primary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ad_banner_no_margin"
                        android:layout_marginTop="@dimen/ad_banner_no_margin"
                        android:layout_marginEnd="@dimen/ad_banner_no_margin"
                        android:layout_marginBottom="@dimen/ad_banner_no_margin"
                        android:maxLines="2"
                        android:textColor="@color/ad_banner_default_text"
                        android:textSize="@dimen/ad_banner_text_size_large"
                        android:textStyle="bold" />

                </LinearLayout>

                <LinearLayout
                    android:id="@+id/row_two"
                    app:layout_constraintBottom_toBottomOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@id/headline"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_weight="@dimen/ad_banner_text_row_weight"
                    android:orientation="horizontal"
                    android:gravity="center_vertical">

                    <TextView
                        android:id="@+id/ad_notification_view"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="@dimen/ad_banner_ad_indicator_width"
                        android:layout_height="@dimen/ad_banner_ad_indicator_height"
                        android:layout_marginStart="@dimen/ad_banner_no_margin"
                        android:layout_marginTop="@dimen/ad_banner_ad_indicator_top_margin"
                        android:layout_marginEnd="@dimen/ad_banner_default_margin"
                        android:background="@drawable/ad_banner_ad_label_background"
                        android:gravity="center"
                        android:text="Ad"
                        android:textColor="@color/ad_banner_ad_label_text"
                        android:textSize="@dimen/ad_banner_ad_indicator_text_size"
                        android:textStyle="normal" />

                    <!--                    <RatingBar-->
                    <!--                        android:id="@+id/rating_bar"-->
                    <!--                        style="?android:attr/ratingBarStyleSmall"-->
                    <!--                        app:layout_constraintBottom_toBottomOf="parent"-->
                    <!--                        app:layout_constraintEnd_toEndOf="parent"-->
                    <!--                        app:layout_constraintStart_toEndOf="@id/ad_notification_view"-->
                    <!--                        app:layout_constraintTop_toTopOf="parent"-->
                    <!--                        android:layout_width="wrap_content"-->
                    <!--                        android:layout_height="wrap_content"-->
                    <!--                        android:layout_marginStart="@dimen/ad_banner_no_margin"-->
                    <!--                        android:layout_marginTop="@dimen/ad_banner_no_margin"-->
                    <!--                        android:layout_marginEnd="@dimen/ad_banner_no_margin"-->
                    <!--                        android:layout_marginBottom="@dimen/ad_banner_no_margin"-->
                    <!--                        android:background="@android:color/transparent"-->
                    <!--                        android:lines="1"-->
                    <!--                        android:numStars="5"-->
                    <!--                        android:stepSize="0.1"-->
                    <!--                        android:textColor="@color/ad_banner_gray"-->
                    <!--                        android:textSize="@dimen/ad_banner_text_size_small">-->

                    <!--                    </RatingBar>-->

                    <TextView
                        android:id="@+id/secondary"
                        app:layout_constraintBottom_toBottomOf="parent"
                        app:layout_constraintEnd_toEndOf="parent"
                        app:layout_constraintStart_toEndOf="@id/ad_notification_view"
                        app:layout_constraintTop_toTopOf="parent"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginStart="@dimen/ad_banner_no_margin"
                        android:layout_marginTop="@dimen/ad_banner_no_margin"
                        android:layout_marginEnd="@dimen/ad_banner_no_margin"
                        android:layout_marginBottom="@dimen/ad_banner_no_margin"
                        android:gravity="top"
                        android:lines="1"
                        android:textColor="@color/ad_banner_gray_text"
                        android:textSize="@dimen/ad_banner_text_size_small"
                        android:maxLines="1"
                        android:ellipsize="end" />

                </LinearLayout>




            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/cta"
                app:layout_constraintStart_toEndOf="@id/content"
                app:layout_constraintTop_toTopOf="parent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:paddingStart="12dp"
                android:paddingEnd="12dp"
                android:minWidth="@dimen/ad_banner_cta_button_min_width"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/ad_banner_cta_button_height"
                android:background="@drawable/ad_banner_cta_button_background"
                android:gravity="center"
                android:lines="1"
                android:textColor="@color/ad_banner_cta_text"
                android:textSize="@dimen/ad_banner_text_size_cta"
                android:layout_marginStart="@dimen/ad_banner_small_margin"
                android:layout_marginEnd="@dimen/ad_banner_no_margin"
                android:hint="Install"
                />



        </androidx.constraintlayout.widget.ConstraintLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

</com.google.android.gms.ads.nativead.NativeAdView>
